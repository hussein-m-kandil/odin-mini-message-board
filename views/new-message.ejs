<!DOCTYPE html>
<html>
  <%- include("components/head", {title}) %>
  <body>
    <%- include("components/header", {title}) %>
    <main>
      <h2><%= title %></h2>
      <% if(locals.errorMessage) { %>
      <div id="flash-message"><%= errorMessage %></div>
      <% } %>
      <form action="/new" method="post">
        <div>
          <label for="user-name">Name</label>
          <br />
          <input
            type="text"
            id="user-name"
            name="user-name"
            placeholder="Thor"
            maxlength="28"
          />
        </div>
        <div>
          <label for="message">Message</label>
          <br />
          <textarea name="message" id="message" placeholder="Hello!"></textarea>
        </div>
        <button type="submit">Send</button>
      </form>
    </main>
    <script>
      const flash = document.getElementById("flash-message");
      if (flash) {
        setTimeout(() => (flash.textContent = ""), 3000);
      }
    </script>
  </body>
</html>
