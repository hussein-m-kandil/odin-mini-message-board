<!DOCTYPE html>
<html>
  <%- include("components/head", { title }) %>
  <body>
    <%- include("components/header") %>
    <main>
      <% if (locals.message) { %>
      <div class="message-card">
        <div class="user-name"><%= message.userName %></div>
        <div class="message-date"><%= message.date %></div>
        <div class="message"><%= message.text %></div>
      </div>
      <% } else if (locals.errorMessage) { %>
      <p id="flash-message"><%= errorMessage %></p>
      <% } else { %>
      <p id="flash-message">There is no message to represent!</p>
      <% } %>
    </main>
  </body>
</html>
