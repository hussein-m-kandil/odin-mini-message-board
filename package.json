{
  "name": "odin-mini-message-board",
  "version": "1.0.0",
  "description": "A mini message board, developed as part of the Node.js course at The Odin Project.",
  "main": "api/index.js",
  "scripts": {
    "start": "export NODE_ENV=production; node api/index.js",
    "dev": "export NODE_ENV=development; node --env-file=.env --watch api/index.js",
    "vercel:dev": "[ -f .env ] && export $(cat .env) && vercel dev --listen 3001",
    "vercel:deploy": "vercel",
    "vercel:production": "vercel --prod"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hussein-m-kandil/odin-mini-message-board.git"
  },
  "keywords": [
    "javascript",
    "node.js",
    "express",
    "ejs",
    "mvc",
    "message-board",
    "web",
    "backend",
    "development"
  ],
  "author": "Hussein Kandil",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/hussein-m-kandil/odin-mini-message-board/issues"
  },
  "homepage": "https://github.com/hussein-m-kandil/odin-mini-message-board#readme",
  "dependencies": {
    "date-fns": "^3.6.0",
    "ejs": "^3.1.10",
    "express": "^4.21.0",
    "express-validator": "^7.2.0",
    "pg": "^8.13.0"
  },
  "devDependencies": {
    "vercel": "^37.11.0"
  }
}
